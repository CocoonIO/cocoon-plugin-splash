<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <allow-intent href="market:*" />
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android" >
        <preference name="CocoonSplashImage" value="cocoon://backend" />
        <preference name="CocoonSplashBackgroundColor" value="#1c2023" />
        <preference name="CocoonSplashScaleMode" value="ScaleAspectFit" />
        <preference name="CocoonSplashDelay" value="5" />
        <preference name="CocoonSplashPadding" value="10%" />
    </platform>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="UserSplashPlugin">
        <param name="android-package" value="com.ludei.usersplash.android.UserSplashPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashPlugin">
        <param name="android-package" value="com.ludei.splash.android.SplashPlugin" />
        <param name="onload" value="true" />
    </feature>
</widget>
